    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="#08000000">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Daily Water"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="27dp"
            android:layout_height="40dp"
            android:background="@drawable/water"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/waterlevelid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:text="0/2000ml"/>
            </LinearLayout>
            <TextView
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="+200ml" />

        </LinearLayout>




        <ProgressBar
            android:id="@+id/waterid"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:rotation="270"
            android:visibility="visible"
            android:progressDrawable="@drawable/waterprogress"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Stepcount for the week"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:background="@drawable/indexstep"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="270"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/step1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="20"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="30"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="60"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step4"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="10"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step5"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="67"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step6"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="22"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />
            <ProgressBar
                android:id="@+id/step7"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_width="280dp"
                android:progress="30"
                android:layout_height="15dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/daysprogressbar"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="55dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="13dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2/20"/>
        <TextView
            android:id="@+id/d2"
            android:layout_width="wrap_content"
