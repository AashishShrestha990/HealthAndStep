            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2/20"/>
        <TextView
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="13dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2/20"/>
        <TextView
            android:id="@+id/d5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="13dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2/20"/>
        <TextView
            android:id="@+id/d6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="13dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2/20"/>
        <TextView
            android:id="@+id/d7"
